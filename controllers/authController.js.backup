 */
exports.logout = async (req, res, next) => {
  try {
    res.status(200).json({
      success: true,
      data: {}
    });
  } catch (error) {
    next(error);
  }
};

/**
 * @desc    Restablir contrasenya
 * @route   POST /api/auth/forgotpassword
 * @access  Public
 */
exports.forgotPassword = async (req, res, next) => {
  try {
    const user = await User.findOne({ email: req.body.email });

    if (!user) {
      return next(new ErrorResponse('No hi ha cap usuari amb aquest email', 404));
    }

    // Generar token de restabliment
    const resetToken = user.getResetPasswordToken();
    await user.save({ validateBeforeSave: false });

    // Crear URL de restabliment
    const resetUrl = `${req.protocol}://${req.get('host')}/api/auth/resetpassword/${resetToken}`;

    const message = `Has sol·licitat el restabliment de la teva contrasenya. Si us plau, fes POST a: \n\n ${resetUrl}`;

    try {
      await sendEmail({
        email: user.email,
        subject: 'Restabliment de contrasenya',
        message
      });

      res.status(200).json({
        success: true,
        message: 'Email enviat'
      });
    } catch (err) {
      console.log(err);
      user.resetPasswordToken = undefined;
      user.resetPasswordExpire = undefined;

      await user.save({ validateBeforeSave: false });

      return next(new ErrorResponse('No s\'ha pogut enviar l\'email', 500));
    }
  } catch (error) {
    next(error);
  }
};

/**
 * @desc    Restablir contrasenya
 * @route   PUT /api/auth/resetpassword/:resettoken
 * @access  Public
 */
exports.resetPassword = async (req, res, next) => {
  try {
    // Obtindre token hash
    const resetPasswordToken = crypto
      .createHash('sha256')
      .update(req.params.resettoken)
      .digest('hex');

    const user = await User.findOne({
      resetPasswordToken,
      resetPasswordExpire: { $gt: Date.now() }
    });

    if (!user) {
      return next(new ErrorResponse('Token invàlid o expirat', 400));
    }

    // Establir nova contrasenya
    user.password = req.body.password;
    user.resetPasswordToken = undefined;
    user.resetPasswordExpire = undefined;
    await user.save();

    sendTokenResponse(user, 200, res);
  } catch (error) {
    next(error);
  }
};

// Helper per enviar token i dades d'usuari
const sendTokenResponse = (user, statusCode, res) => {
  // Crear token
  const token = user.getSignedJwtToken();

  // Obtenir permisos efectius
  user.getEffectivePermissions().then(permissions => {
    res.status(statusCode).json({
      success: true,
      token,
      data: {
        id: user._id,
        name: user.name,
        email: user.email,
        roles: user.roles,
        permissions: permissions
      }
    });
  });
};
